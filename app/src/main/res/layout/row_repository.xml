<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/repoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="12dp"
            android:text="@string/loading"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/repoDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/repoName"
            android:layout_below="@+id/repoName"
            android:layout_marginTop="11dp"
            android:text="@string/loading" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/repoDesc"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/repoDesc"
            android:layout_marginBottom="16dp"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/repoOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatar"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/avatar"
            android:text="@string/loading" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/repoOwner"
            android:layout_marginStart="54dp"
            android:layout_toEndOf="@+id/repoOwner"
            app:srcCompat="@android:drawable/star_on" />

        <TextView
            android:id="@+id/nbOfStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/repoOwner"
            android:layout_marginEnd="32dp"
            android:text="@string/loading" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
